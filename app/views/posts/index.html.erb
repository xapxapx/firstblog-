<h1> Blog Posts </h1>

 <%= form_tag("/posts/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<% @posts.each do |post| %>
	<h3> <%= link_to post.title,post %> </h3>
	<p> <%= post.body %></p>
	<hr>
<% end %>
<%= link_to "Add New Post", new_post_path %>